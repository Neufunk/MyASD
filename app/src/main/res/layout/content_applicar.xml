<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.myasd.Applicar"
    tools:showIn="@layout/app_bar_applicar">

    <ScrollView
        android:id="@+id/mainGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.asdnamur.applicar.MainActivity"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="-35dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/plaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/TextView2"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/plaqueEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plaque"
                android:layout_alignParentStart="true"
                android:ems="9"
                android:inputType="textPersonName"
                android:labelFor="@+id/plaqueEdit"
                android:maxLength="9" />

            <TextView
                android:id="@+id/kilometrage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="255dp"
                android:text="@string/TextView7"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/kilometrageEdit"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kilometrage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="255dp"
                android:layout_marginTop="0dp"
                android:ems="9"
                android:inputType="number"
                android:labelFor="@+id/kilometrageEdit"
                android:maxLength="6" />

            <CheckBox
                android:id="@+id/CheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:checked="true"
                android:text="@string/CheckBox1" />

            <TextView
                android:id="@+id/adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CheckBox1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="19dp"
                android:enabled="false"
                android:alpha="0.3"
                android:text="@string/TextView3"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/adressEdit"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adresse"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-4dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textCapSentences"
                android:labelFor="@+id/adressEdit"
                tools:text="Adresse" />

            <TextView
                android:id="@+id/dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adressEdit"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="12dp"
                android:text="@string/TextView4"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/date_edit_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dates"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:inputType="datetime"
                android:labelFor="@+id/date_edit_1"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/date_edit_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_edit_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-1dp"
                android:ems="10"
                android:inputType="datetime"
                android:labelFor="@+id/date_edit_2" />

            <EditText
                android:id="@+id/date_edit_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_edit_2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:ems="10"
                android:inputType="datetime"
                android:labelFor="@+id/date_edit_3" />

            <TextView
                android:id="@+id/probleme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_edit_3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="35dp"
                android:text="@string/TextView5"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plaqueEdit"
                android:layout_marginTop="0dp"
                android:text="@string/CheckBox2" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/probleme"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:entries="@array/feedbacktypelist" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="43dp"
                android:text="@string/TextView6"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/remarque_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-1dp"
                android:ems="10"
                android:inputType="textCapSentences"
                android:labelFor="@+id/remarque_edit" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date_edit_3"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="1dp"
                android:layout_toEndOf="@+id/date_edit_2"
                android:entries="@array/moment" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/spinner1"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="18dp"
                android:layout_toEndOf="@+id/date_edit_1"
                android:entries="@array/moment" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date_edit_3"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/date_edit_3"
                android:entries="@array/moment" />

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>